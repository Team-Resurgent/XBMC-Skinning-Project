<window id="100">

	<defaultcontrol always="true">10</defaultcontrol>

	<controls>
	
		<!-- dimmed background -->
		<include>bg-dimmed</include>
		
		<control type="group">
		
			<posx>400</posx>
			<posy>240</posy>		
		
			<!-- background -->
			<control type="image">
				<texture border="12">bg-dialog.png</texture>
				<width>480</width>
				<height>240</height>
				<colordiffuse>dialog</colordiffuse>
			</control>
			<!-- heading -->
			<control type="label" id="1">
				<width>460</width>
				<height>40</height>
				<posx>10</posx>
				<posy>10</posy>
				<font>dialog</font>
				<textcolor>type-dialog-header</textcolor>
			</control>
			<!-- line 1 -->
			<control type="label" id="2">
				<width>460</width>
				<height>40</height>
				<posx>10</posx>
				<posy>60</posy>
				<font>dialog</font>
				<textcolor>type-dialog-dark</textcolor>
			</control>
			<!-- line 2 -->
			<control type="label" id="3">
				<width>460</width>
				<height>40</height>
				<posx>10</posx>
				<posy>100</posy>
				<font>dialog</font>
				<textcolor>type-dialog-dark</textcolor>
			</control>
			<!-- line 3 -->
			<control type="label" id="4">
				<width>460</width>
				<height>40</height>
				<posx>10</posx>
				<posy>140</posy>
				<font>dialog</font>
				<textcolor>type-dialog-dark</textcolor>
			</control>
			<!-- yes button -->
			<control type="button" id="11">
				<label>Yes</label>
				<posx>90</posx>
				<posy>180</posy>
				<onleft>10</onleft>
				<onright>10</onright>
			</control>
			<!-- no button -->
			<control type="button" id="10">
				<label>No</label>
				<posx>250</posx>
				<posy>180</posy>
				<onleft>11</onleft>
				<onright>11</onright>
			</control>
		</control>

	</controls>

</window>