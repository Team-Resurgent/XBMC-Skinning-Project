<!-- setup for network shares -->
<window id="128">

	<defaultcontrol>10</defaultcontrol>
		
	<controls>
	
		<!-- dimmed background -->
		<include>bg-dimmed</include>
		
		<control type="group">
		
			<visible>!Window.IsActive(numericinput)</visible>	
			<posx>320</posx>
			<posy>80</posy>
			
			<!-- background -->
			<control type="image">
				<texture border="12">bg-dialog.png</texture>
				<width>640</width>
				<height>540</height>
				<colordiffuse>dialog</colordiffuse>
			</control>
			<!-- heading -->
			<control type="label">
				<label>Network Setup</label>
				<width>600</width>
				<height>40</height>
				<posx>20</posx>
				<posy>10</posy>
				<font>dialog</font>
				<textcolor>type-dialog-header</textcolor>
			</control>
			
			<control type="grouplist" id="9100">
			
				<posx>20</posx>
				<posy>60</posy>
				<onup>19</onup>
				<ondown>18</ondown>
				<usecontrolcoords>true</usecontrolcoords>
				<itemgap>10</itemgap>
				
				<!-- protocol spin control -->
				<control type="spincontrolex" id="10">
					<label>1008</label>
					<width>600</width>
					<height>40</height>
					<textoffsetx>20</textoffsetx>
					<font>dialog</font>
					<textcolor>type-dialog-dark</textcolor>
					<focusedcolor>type-dialog</focusedcolor>
					<texturefocus border="8">button-back.png</texturefocus>
					<texturenofocus border="4">button-back-nf.png</texturenofocus>
				</control>
				<!-- server address -->
				<control type="button" id="11">
					<width>440</width>
					<height>40</height>
					<align>left</align>
					<textoffsetx>20</textoffsetx>
				</control>
				<!-- server browse -->
				<control type="button" id="12">
					<label>Browse</label>
					<width>150</width>
					<height>40</height>
					<posx>450</posx>
					<posy>-50</posy>
				</control>
				<!-- remote path -->
				<control type="button" id="16">
					<width>600</width>
					<height>40</height>
					<align>left</align>
					<textoffsetx>20</textoffsetx>
				</control>
				<!-- port -->
				<control type="button" id="13">
					<label>1013</label>
					<width>600</width>
					<height>40</height>
					<align>left</align>
					<textoffsetx>20</textoffsetx>
				</control>
				<!-- username -->
				<control type="button" id="14">
					<label>1014</label>
					<width>600</width>
					<height>40</height>
					<align>left</align>
					<textoffsetx>20</textoffsetx>
				</control>
				<!-- password -->
				<control type="button" id="15">
					<label>15052</label>
					<width>600</width>
					<height>40</height>
					<align>left</align>
					<textoffsetx>20</textoffsetx>
				</control>
			</control>
			
			<control type="group">
				
				<posx>20</posx>
				<posy>480</posy>
				
				<!-- cancel button -->
				<control type="button" id="19">
					<label>Cancel</label>
					<posx>290</posx>
					<onleft>18</onleft>
					<onright>18</onright>
					<onup>9100</onup>
					<ondown>9100</ondown>
				</control>
				<!-- ok button -->
				<control type="button" id="18">
					<label>Ok</label>
					<posx>450</posx>
					<onleft>19</onleft>
					<onright>19</onright>
					<onup>9100</onup>
					<ondown>9100</ondown>
				</control>
			</control>
		</control>
		
	</controls>
	
</window>
