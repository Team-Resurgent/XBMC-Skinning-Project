<!-- 
USE: For displaying wide icons (tv series or games).
-->
<includes>
	<include name="ViewWide">
			
		<control type="group">
				
			<visible>Control.IsVisible(53)</visible>
			<posx>40</posx>
			<posy>80</posy>
			
			<!-- background -->
			<control type="image">
				<texture>container-back-nf.png</texture>
				<width>1150</width>
				<height>590</height>
			</control>

			<!-- list container -->
			<control type="panel" id="53">
			
				<viewtype label="Wide">icon</viewtype>
				<width>1150</width>
				<height>580</height>
				<posx>10</posx>
				<posy>10</posy>
				<onup>53</onup>
				<ondown>53</ondown>
				<onleft>9000</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				
				<itemlayout height="197" width="575">
					<control type="image">
						<texture border="8">listitem-back-nf.png</texture>
						<width>555</width>
						<height>177</height>
					</control>
					<control type="image">
						<texture>$INFO[ListItem.Icon]</texture>
						<width>545</width>
						<height>137</height>
						<posx>5</posx>
						<posy>5</posy>
						<colordiffuse>dimmed</colordiffuse>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<width>365</width>
						<height>20</height>
						<posx>10</posx>
						<posy>147</posy>
						<font>listitem-small</font>
						<textcolor>type-listitem-dark</textcolor>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label2]</label>
						<width>170</width>
						<height>20</height>
						<posx>545</posx>
						<posy>147</posy>
						<font>listitem-small</font>
						<textcolor>type-listitem-dark</textcolor>
						<align>right</align>
					</control>
				</itemlayout>
				<focusedlayout height="197" width="575">
					<control type="image">
						<visible>Control.HasFocus(20)</visible>
						<texture border="8">listitem-back.png</texture>
						<width>555</width>
						<height>177</height>
					</control>
					<control type="image">
						<visible>!Control.HasFocus(20)</visible>
						<texture border="8">listitem-back-nf.png</texture>
						<width>555</width>
						<height>177</height>
					</control>
					<control type="image">
						<texture aligny="bottom">$INFO[ListItem.Icon]</texture>
						<width>545</width>
						<height>137</height>
						<posx>5</posx>
						<posy>5</posy>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<width>365</width>
						<height>20</height>
						<posx>10</posx>
						<posy>147</posy>
						<font>listitem-small</font>
						<textcolor>type-listitem</textcolor>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label2]</label>
						<width>170</width>
						<height>20</height>
						<posx>545</posx>
						<posy>147</posy>
						<font>listitem-small</font>
						<textcolor>type-listitem</textcolor>
						<align>right</align>
					</control>
				</focusedlayout>
			</control>
			
			<!-- scrollbar -->
			<control type="group">
				<posx>1170</posx>
				<control type="image">
					<texture>container-back-nf.png</texture>
					<width>30</width>
					<height>590</height>
				</control>
				<control type="scrollbar" id="60">
					<width>30</width>
					<height>590</height>
					<onleft>50</onleft>
					<onright>9000</onright>
					<showonepage>false</showonepage>
				</control>
			</control>
			
			<!-- container info -->
			<control type="group">
				<posy>590</posy>
				<!-- number of files -->
				<control type="label" id="12">
					<width>670</width>
					<height>40</height>
					<font>content-small</font>
					<textcolor>type-header-dark</textcolor>
				</control>
				<!-- current page / number of pages -->
				<control type="label">
					<label>$INFO[Container().CurrentPage,, / ]$INFO[Container().NumPages]</label>
					<width>670</width>
					<height>40</height>
					<posx>1200</posx>
					<font>content-small</font>
					<textcolor>type-header-dark</textcolor>
					<align>right</align>
				</control>
			</control>
			
		</control>
				
	</include>
</includes>