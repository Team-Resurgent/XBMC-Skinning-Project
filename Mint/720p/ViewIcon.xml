<!-- 
USE: General view for displaying icons of folders/files.
-->
<includes>
	<include name="ViewIcon">
	
		<control type="group">
				
			<visible>Control.IsVisible(51)</visible>
			<posx>40</posx>
			<posy>80</posy>
			
			<!-- background -->
			<control type="image">
				<texture>container-back-nf.png</texture>
				<width>1150</width>
				<height>590</height>
			</control>

			<!-- list container -->
			<control type="panel" id="51">
			
				<viewtype label="Icon">icon</viewtype>
				<width>1150</width>
				<height>590</height>
				<posx>10</posx>
				<posy>10</posy>
				<onup>51</onup>
				<ondown>51</ondown>
				<onleft>9000</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				
				<itemlayout height="295" width="287">
					<control type="image">
						<texture border="8">listitem-back-nf.png</texture>
						<width>267</width>
						<height>275</height>
					</control>
					<control type="image">
						<texture>$INFO[ListItem.Icon]</texture>
						<width>215</width>
						<height>215</height>
						<posx>26</posx>
						<posy>10</posy>
						<colordiffuse>dimmed</colordiffuse>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<width>247</width>
						<height>30</height>
						<posx>136</posx>
						<posy>235</posy>
						<font>listitem</font>
						<textcolor>type-listitem-dark</textcolor>
						<align>center</align>
					</control>
				</itemlayout>
				<focusedlayout height="295" width="287">
					<control type="image">
						<visible>Control.HasFocus(20)</visible>
						<texture border="8">listitem-back.png</texture>
						<width>267</width>
						<height>275</height>
					</control>
					<control type="image">
						<visible>!Control.HasFocus(20)</visible>
						<texture border="8">listitem-back-nf.png</texture>
						<width>267</width>
						<height>275</height>
					</control>
					<control type="image">
						<texture aligny="bottom">$INFO[ListItem.Icon]</texture>
						<width>215</width>
						<height>215</height>
						<posx>26</posx>
						<posy>10</posy>
						<aspectratio>keep</aspectratio>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<width>247</width>
						<height>30</height>
						<posx>136</posx>
						<posy>235</posy>
						<font>listitem</font>
						<textcolor>type-listitem</textcolor>
						<align>center</align>
					</control>
				</focusedlayout>
			</control>
			
			<!-- scrollbar -->
			<control type="group">
				<posx>1170</posx>
				<control type="image">
					<texture>container-back-nf.png</texture>
					<width>30</width>
					<height>590</height>
				</control>
				<control type="scrollbar" id="60">
					<width>30</width>
					<height>590</height>
					<onleft>50</onleft>
					<onright>9000</onright>
					<showonepage>false</showonepage>
				</control>
			</control>
			
			<!-- container info -->
			<control type="group">
				<posy>590</posy>
				<!-- number of files -->
				<control type="label" id="12">
					<width>670</width>
					<height>40</height>
					<font>content-small</font>
					<textcolor>type-header-dark</textcolor>
				</control>
				<!-- current page / number of pages -->
				<control type="label">
					<label>$INFO[Container().CurrentPage,, / ]$INFO[Container().NumPages]</label>
					<width>670</width>
					<height>40</height>
					<posx>1200</posx>
					<font>content-small</font>
					<textcolor>type-header-dark</textcolor>
					<align>right</align>
				</control>
			</control>
			
		</control>

	</include>
</includes>