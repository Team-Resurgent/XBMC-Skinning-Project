<window id="0">
	<defaultcontrol>300</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<!-- background 16x9 -->

<include>background-image</include>

<control type="fixedlist" id="300">
      <description>fixed list</description>
      <posx>40</posx>
      <posy>45</posy>
      <width>620</width>
      <height>450</height>
      <visible>true</visible>
      <onup>300</onup>
      <ondown>Select</ondown>
      <onleft>1</onleft>
      <onright>1</onright>
      <viewtype>list</viewtype>
      <orientation>horizontal</orientation>
      <pagecontrol>25</pagecontrol>
      <scrolltime>400</scrolltime>
      <focusposition>2</focusposition>
      <itemlayout width="70" height="70">
        <control type="image">
            <posx>10</posx>
            <posy>88</posy>
            <width>35</width>
            <height>50</height>
	    <aspectratio>stretch</aspectratio>
            <info>ListItem.ActualIcon</info>
	    <colordiffuse>grey2</colordiffuse>
        </control>
     </itemlayout>
      <focusedlayout height="60" width="70">
        <control type="image">
            <posx>10</posx>
            <posy>80</posy>
            <width>45</width>
            <height>60</height>
	    <aspectratio>stretch</aspectratio>
	    <animation effect="fade" start="85" time="1000" pulse="true" condition="Control.HasFocus(300)">Conditional</animation>
            <info>ListItem.Thumb</info>
        </control>
        <control type="label">
            <posx>33</posx>
            <posy>122</posy>
            <width>70</width>
            <height>40</height>
            <font>font12</font>
            <aligny>center</aligny>
            <align>center</align>
            <info>ListItem.Label</info>
	    <animation effect="fade" start="85" time="1000" pulse="true" condition="Control.HasFocus(300)">Conditional</animation>
        </control>
       </focusedlayout>
