					<align>right</align>
					<font>font12</font>
					<textcolor>green</textcolor>
				</control>
				<control type="label">
					<description>PartyMode Enabled</description>
					<posx>305</posx>
					<posy>75</posy>
					<width>200</width>
					<label>589</label>
					<visible>MusicPartyMode.Enabled</visible>
					<align>right</align>
					<font>font12</font>
					<textcolor>green</textcolor>
				</control>
			</control>
		</control>
	</controls>
</window>