	<include name="Fake_Music_Overlay">
		<control type="group">
			<include>Slide_From_Left_Animation</include>
			<visible>Player.HasAudio + !Control.IsVisible(54)</visible>
			<animation effect="fade" time="100" condition="!Skin.HasSetting(animated)">VisibleChange</animation>
			<control type="image" id="0">
				<description>Icon Back</description>
				<posx>45</posx>
				<posy>370</posy>
				<width>150</width>
				<height>150</height>
				<texture>Panel.png</texture>
			</control>
			<control type="image" id="0">
				<description>Music Cover</description>
				<posx>55</posx>
				<posy>380</posy>
				<width>130</width>
				<height>115</height>
				<info>MusicPlayer.Cover</info>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label" id="0">
