				<posx>45</posx>
				<posy>525</posy>
				<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Title, - ]</label>
				<font>font13</font>
				<textcolor>green</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
		</control>
		<control type="group">
			<posx>60</posx>
			<posy>485</posy>
			<visible>Player.HasAudio + Control.IsVisible(54)</visible>
			<animation effect="fade" time="100" condition="!Skin.HasSetting(animated)">VisibleChange</animation>
			<animation effect="slide" start="0,300" time="200" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="slide" end="0,300" time="200" condition="!Skin.HasSetting(animated)">WindowClose</animation>
			<control type="image">
				<description>Cd Cover Area</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>56</width>
				<height>70</height>
