			<control type="label">
				<description>Title label</description>
				<posx>61</posx>
				<posy>15</posy>
				<width>500</width>
				<label>$INFO[musicplayer.Time]$INFO[musicplayer.Duration, / ] - $INFO[MusicPlayer.Title]</label>
				<textcolor>green</textcolor>
				<shadowcolor>black</shadowcolor>
				<align>left</align>
				<font>font12</font>
			</control>
			<control type="label">
				<description>Artist label</description>
				<posx>61</posx>
