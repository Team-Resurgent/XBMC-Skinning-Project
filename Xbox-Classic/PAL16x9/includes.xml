<includes>
	<include file="Defaults.xml" />
	<include file="Translate.xml" />
	<include file="CommonViewTypes.xml" />
	<include file="3d_coverview.xml" />
	<include name="ListItemIcon">
		<control type="image">
			<description>Icon Back</description>
			<posx>45</posx>
			<posy>370</posy>
			<width>150</width>
			<height>150</height>
			<texture>Panel.png</texture>
			<visible>Skin.HasSetting(UseListItemIcon) + [Control.HasFocus(50) | Control.HasFocus(51)] + !Player.HasMedia</visible>
			<animation effect="fade" start="0" end="100" time="200" condition="!Skin.HasSetting(animated)">VisibleChange</animation>
			<include>Slide_From_Left_Animation</include>
		</control>
		<control type="image">
			<description>list icon</description>
			<posx>55</posx>
			<posy>380</posy>
			<width>130</width>
			<height>130</height>
			<info>Listitem.Icon</info>
			<aspectratio>keep</aspectratio>
			<visible>Skin.HasSetting(UseListItemIcon) + [Control.HasFocus(50) | Control.HasFocus(51)] + !Player.HasMedia</visible>
			<animation effect="fade" start="0" end="100" time="200" condition="!Skin.HasSetting(animated)">VisibleChange</animation>
			<include>Slide_From_Left_Animation</include>
		</control>
		<control type="image">
			<description>list icon Overlay</description>
			<posx>160</posx>
			<posy>480</posy>
			<width>26</width>
			<height>32</height>
			<info>Listitem.Overlay</info>
			<visible>Skin.HasSetting(UseListItemIcon) + [Control.HasFocus(50) | Control.HasFocus(51)] + !Player.HasMedia</visible>
			<animation effect="fade" start="0" end="100" time="200" condition="!Skin.HasSetting(animated)">VisibleChange</animation>
			<include>Slide_From_Left_Animation</include>
		</control>
	</include>
	<include name="Dialog_Background">
		<control type="image">
			<description>Dialog Header</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>315</width>
			<height>180</height>
			<texture>dialog_top.png</texture>
			<animation effect="slide" time="150" start="120,120" end="0,0" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		</control>
		<control type="image">
			<description>Dialog Text Area</description>
			<posx>40</posx>
			<posy>40</posy>
			<width>490</width>
			<height>360</height>
			<texture border="5">dialog_middle.png</texture>
			<animation effect="zoom" time="150" start="137,127,250,120" end="40,40,490,360" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
			<animation effect="fade" start="70" end="70" time="0" condition="Window.IsVisible(slideshow)">Conditional</animation>
		</control>
		<control type="image">
			<description>Dialog Footer</description>
			<posx>253</posx>
			<posy>279</posy>
			<width>310</width>
			<height>160</height>
			<texture>dialog_bottom.png</texture>
			<animation effect="slide" time="150" start="-120,-120" end="0,0" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		</control>
	</include>
	<include name="SkinSettingScrollbar">
		<control type="button">
			<posx>445</posx>
			<posy>35</posy>
			<include>Scrollbar_Width</include>
			<height>20</height>
			<onclick>PageUp(90)</onclick>
			<texturefocus>scrollbar_uparrow.png</texturefocus>
			<texturenofocus>scrollbar_uparrow.png</texturenofocus>
		</control>
		<control type="button">
			<posx>445</posx>
			<posy>310</posy>
			<include>Scrollbar_Width</include>
			<height>20</height>
			<onclick>PageDown(90)</onclick>
			<texturefocus>scrollbar_downarrow.png</texturefocus>
			<texturenofocus>scrollbar_downarrow.png</texturenofocus>
		</control>
		<control type="scrollbar" id="90">
			<posx>445</posx>
			<posy>55</posy>
			<include>Scrollbar_Width</include>
			<height>255</height>
			<texturesliderbackground border="2,0,2,0">scrollbar_background.png</texturesliderbackground>
			<texturesliderbar border="2,6,2,6">scrollbar_nofocus.png</texturesliderbar>
			<texturesliderbarfocus border="2,5,2,5">scrollbar_focus.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>90</onup>
			<ondown>90</ondown>
			<showonepage>true</showonepage>
			<orientation>vertical</orientation>
		</control>
	</include>
	<include name="Scrollbar_Width">
		<width>16</width>
	</include>
	<include name="Dialog_Content_Animation">
		<animation effect="fade" time="100" start="0" end="100" delay="150" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
	</include>
	<include name="Slide_From_Left_Animation">
		<animation effect="slide" time="300" start="-720,0" end="0,0" acceleration="-1.1" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		<animation effect="slide" time="300" start="0,0" end="-720,0" acceleration="1.3" delay="0" condition="!Skin.HasSetting(animated)">WindowClose</animation>
	</include>
	<include name="Slide_From_Right_Animation">
		<animation effect="slide" time="300" start="720,0" end="0,0" acceleration="-1.1" delay="0" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
		<animation effect="slide" time="300" start="0,0" end="720,0" acceleration="1.3" delay="0" condition="!Skin.HasSetting(animated)">WindowClose</animation>
	</include>
	<include name="Fade_Window_OpenClose_Animation">
		<animation effect="fade" start="100" end="0" time="300" condition="!Skin.HasSetting(animated)">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="300" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
	</include>
	<include name="Fade_Dialog_OpenClose_Animation">
		<animation effect="fade" start="100" end="0" time="200" condition="!Skin.HasSetting(animated)">WindowClose</animation>
		<animation effect="fade" start="0" end="100" time="200" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
	</include>
