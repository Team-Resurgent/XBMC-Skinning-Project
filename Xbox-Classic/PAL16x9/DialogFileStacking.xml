<window id="2008">
	<defaultcontrol>450</defaultcontrol>
	<animation effect="slide" time="150" start="0,-150" condition="!Skin.HasSetting(animated)">WindowOpen</animation>
	<animation effect="slide" time="150" end="0,-150" condition="!Skin.HasSetting(animated)">WindowClose</animation>
	<controls>
		<control type="list" id="450">
			<posx>360</posx>
			<posy>10</posy>
			<width>330</width>
			<height>100</height>
			<onleft>450</onleft>
			<onright>450</onright>
			<onup>450</onup>
			<ondown>450</ondown>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<itemlayout width="24">
				<control type="image">
					<posx>0</posx>
					<posy>5</posy>
					<width>32</width>
					<height>40</height>
					<info>ListItem.Icon</info>
					<texture>button-cd-focus.png</texture>
				</control>
			</itemlayout>
			<focusedlayout width="32">
				<control type="image">
					<posx>5</posx>
					<posy>5</posy>
					<width>32</width>
					<height>40</height>
					<info>ListItem.Icon</info>
					<texture>button-cd-nofocus.png</texture>
					<animation effect="zoom" end="0,0,40,50" time="100">focus</animation>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>48</posy>
					<width>60</width>
					<height>22</height>
					<font>font12</font>
					<align>center</align>
					<info>ListItem.Label</info>
					<shadowcolor>black</shadowcolor>
				</control>
			</focusedlayout>
		</control>
		<control type="label">
			<posx>680</posx>
			<posy>25</posy>
			<height>22</height>
			<font>font13</font>
			<align>right</align>
			<info>ListItem.Label</info>
			<textcolor>yellow</textcolor>
			<shadowcolor>black</shadowcolor>
		</control>
	</controls>
</window>