<window id="115">
	<defaultcontrol>1</defaultcontrol>
	<include>Fade_Dialog_OpenClose_Animation</include>
	<visible>Player.Seeking | Player.DisplayAfterSeek | [Player.ShowInfo + Window.IsActive(FullScreenVideo)] | Window.IsActive(VideoOSD) | Window.IsActive(MusicOSD) | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
	<controls>
    <control type="group">
      <control type="progress" id="26">
        <description>Progressbar</description>
        <posx>400</posx>
        <posy>50</posy>
        <width>300</width>
        <height>55</height>
        <info>Player.Progress</info>
        <texturebg>volume-panel-bg.png</texturebg>
        <midtexture>volume_middle.png</midtexture>
        <overlaytexture>volume_overlay.png</overlaytexture>
        <visible>true</visible>
      </control>

      <control type="group">
        <posx>405</posx>
        <posy>65</posy>
      

        <!-- playstate images -->
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
			  <description>pause image</description>
			  <align>right</align>
			  <visible>Player.Paused</visible>
			  <texture>video-pause.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <height>26</height>
        <width>50</width>
			  <description>2x image</description>
			  <visible>Player.Forwarding2x</visible>
			  <texture>video-2x.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>4x image</description>
			  <visible>Player.Forwarding4x</visible>
			  <texture>video-4x.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>8x image</description>
			  <visible>Player.Forwarding8x</visible>
			  <texture>video-8x.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>16x image</description>
			  <visible>Player.Forwarding16x</visible>
			  <texture>video-16x.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>32x image</description>
			  <visible>Player.Forwarding32x</visible>
			  <texture>video-32x.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>-2x image</description>
			  <visible>Player.Rewinding2x</visible>
			  <texture>video-2xr.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>-4x image</description>
			  <visible>Player.Rewinding4x</visible>
			  <texture>video-4xr.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>-8x image</description>
			  <visible>Player.Rewinding8x</visible>
			  <texture>video-8xr.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>-16x image</description>
			  <visible>Player.Rewinding16x</visible>
			  <texture>video-16xr.png</texture>
			  <colorkey>0</colorkey>
		  </control>
		  <control type="image" id="0">
        <height>26</height>
        <width>50</width>
        <description>-32x image</description>
			  <visible>Player.Rewinding32x</visible>
			  <texture>video-32xr.png</texture>
			  <colorkey>0</colorkey>
		  </control>
      </control>
		  
      <control type="label" id="22">
			  <description>Elapsed Time Label</description>
			  <posx>550</posx>
			  <posy>70</posy>
			  <font>font14</font>
			  <align>right</align>
			  <info>Player.Time</info>
			  <width>100</width>
			  <height>16</height>
			  <visible>!Player.Seeking</visible>
		  </control>
		  <control type="label" id="22">
			  <description>Seek Time Label</description>
			  <posx>550</posx>
			  <posy>70</posy>
			  <font>font14</font>
			  <align>right</align>
			  <info>Player.SeekTime</info>
			  <width>100</width>
			  <height>16</height>
			  <visible>Player.Seeking</visible>
		  </control>
		  <control type="label" id="0">
			  <description>Duration Label</description>
			  <posx>550</posx>
			  <posy>70</posy>
			  <label>$INFO[Player.Duration,/ ]</label>
			  <font>font14</font>
			  <align>left</align>
			  <width>100</width>
			  <height>16</height>
		  </control>
  		
		  <control type="slider" id="401">
			  
			  <onup>1</onup>
			  <ondown>1</ondown>
			  <onleft>1</onleft>
			  <onright>1</onright>
		  </control>
    </control>
	</controls>
</window>